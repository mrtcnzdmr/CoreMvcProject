@model List<First_Project.Models.Kitap>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index5</title>
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

</head>
<body>
    <h4>Merhaba Kitap Sayfamıza Hoşgeldiniz</h4>
    <table class="table table-bordered" style="margin-left:15px;">
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.Id</td>
                <td>@k.KitapAd</td>
                <td>@k.KitapYazar</td>
                
            </tr>
        }
    </table>
    <button class=" btn btn-warning"style="margin-left:15px;">Tablo Listesi</button>
</body>
</html>
